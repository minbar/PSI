@model  IEnumerable<PSI_X.Models.Company>
    @{
        ViewBag.Title = "Show";
    }
    <br />
    <br />
    <br />
    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>Type of Company</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var name in Model)
        {
            <tr>
                <td>@name.Name</td>
                <td>@name.Address</td>
                <td>@name.TypeOfCompany</td>
            </tr>
        }
        </tbody>
    </table>
   